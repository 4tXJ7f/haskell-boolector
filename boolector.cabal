      Boolector.Foreign
  build-depends:
        base        < 5

  ghc-options: -Wall -fno-warn-orphans
  default-language: Haskell2010
  build-tools:      c2hs

  extra-libraries:  boolector
  extra-lib-dirs:  /usr/local/lib64
  include-dirs: cbits/boolector
  includes:         boolector.h


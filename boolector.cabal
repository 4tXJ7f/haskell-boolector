name:                boolector
version:             0.1.0.0
synopsis:            bindings to SMT solver boolector
description:         bindings to SMT solver boolector
license:             AllRightsReserved
license-file:        cbits/boolector/COPYING
author:              Armin Biere
maintainer:          johannes.waldmann@htwk-leipzig.de
category:            Numeric
build-type:          Simple
cabal-version:       >=1.10
-- homepage:            

extra-source-files:
  cbits/boolector/boolector.h

library
  hs-source-dirs: src
  exposed-modules:
      Boolector
